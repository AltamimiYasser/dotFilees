##
## open work space 3 with a 2 terminals
exec --no-startup-id " sleep 1; i3-msg 'workspace 3; append_layout /home/yasser/.config/i3/workspace-3.json; exec alacritty --class coding'"
#
## open workspace 4 with vim so we can change it to ranger
exec --no-startup-id i3-msg "workspace $ws4; append_layout /home/yasser/.config/i3/workspace-4.json; exec alacritty --class ranger -e bash -i -c 'ranger'"

## open workspace 5 with thunar and a terminal
exec --no-startup-id "sleep 4; i3-msg 'workspace 5; append_layout /home/yasser/.config/i3/workspace-5.json; exec alacritty --class nautilus ; exec nautilus'"
##
## firefox google.com command
## and finally open work space 1 with youtube and stay there
